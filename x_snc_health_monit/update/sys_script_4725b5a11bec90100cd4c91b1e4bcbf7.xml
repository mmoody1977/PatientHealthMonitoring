        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    // Add your code here
    var encQuery = 'patient =' + current.patient.sys_id.toString();

    var grRecStats = new GlideRecord('x_snc_health_monit_covid_stats');
    grRecStats.addEncodedQuery(encQuery);
    grRecStats.orderByDesc('stat_date_time');
    grRecStats.query();
    if (grRecStats.next()) {

        var grRecPatientDetails = new GlideRecord('x_snc_health_monit_patient_details');
        if (grRecPatientDetails.get(current.patient.sys_id)) {
            grRecPatientDetails.risk_level = grRecStats.risk_level;
			grRecPatientDetails.update();
        }
    }




})(current, previous);]]></script>
